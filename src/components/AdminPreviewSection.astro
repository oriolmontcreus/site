---
// Admin Preview Section Component
---

<section id="admin" class="py-20 relative">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">
                Beautiful Admin Interface
            </h2>
            <p class="text-xl text-slate-300 max-w-2xl mx-auto">
                Inspired by Filament v3, built with modern design principles and
                shadcn components
            </p>
        </div>

        <div class="max-w-6xl mx-auto">
            <div
                class="relative rounded-2xl bg-gradient-to-br from-slate-800/50 to-slate-900/50 backdrop-blur-sm border border-white/10 p-8"
            >
                <div class="grid md:grid-cols-2 gap-12 items-center">
                    <div class="space-y-6">
                        <div class="flex items-center space-x-2">
                            <div class="w-3 h-3 rounded-full bg-red-500"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500">
                            </div>
                            <div class="w-3 h-3 rounded-full bg-green-500">
                            </div>
                        </div>
                        <h3 class="text-2xl font-semibold text-white">
                            Dashboard Preview
                        </h3>
                        <p class="text-slate-300">
                            Clean, intuitive interface with powerful features
                            for content management, user administration, and
                            system configuration.
                        </p>
                        <div class="space-y-3">
                            <div
                                class="flex items-center text-sm text-slate-400"
                            >
                                <div
                                    class="w-2 h-2 bg-blue-400 rounded-full mr-3"
                                >
                                </div>
                                Form Builder & Components
                            </div>
                            <div
                                class="flex items-center text-sm text-slate-400"
                            >
                                <div
                                    class="w-2 h-2 bg-green-400 rounded-full mr-3"
                                >
                                </div>
                                Dynamic Page Management
                            </div>
                            <div
                                class="flex items-center text-sm text-slate-400"
                            >
                                <div
                                    class="w-2 h-2 bg-purple-400 rounded-full mr-3"
                                >
                                </div>
                                User & Role Management
                            </div>
                            <div
                                class="flex items-center text-sm text-slate-400"
                            >
                                <div
                                    class="w-2 h-2 bg-orange-400 rounded-full mr-3"
                                >
                                </div>
                                Media Library & Assets
                            </div>
                        </div>
                    </div>
                    <div class="relative">
                        <div
                            class="bg-slate-900 rounded-lg border border-slate-700 p-4"
                        >
                            <div class="space-y-3">
                                <div class="flex items-center justify-between">
                                    <div class="text-sm text-slate-300">
                                        Excalibur CMS Admin
                                    </div>
                                    <div
                                        class="w-2 h-2 bg-green-400 rounded-full"
                                    >
                                    </div>
                                </div>
                                <div class="space-y-2">
                                    <div class="h-6 bg-blue-600 rounded w-3/4">
                                    </div>
                                    <div
                                        class="h-4 bg-slate-700 rounded w-full"
                                    >
                                    </div>
                                    <div class="h-4 bg-slate-700 rounded w-2/3">
                                    </div>
                                    <div class="grid grid-cols-3 gap-2 mt-4">
                                        <div class="h-16 bg-slate-800 rounded">
                                        </div>
                                        <div class="h-16 bg-slate-800 rounded">
                                        </div>
                                        <div class="h-16 bg-slate-800 rounded">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

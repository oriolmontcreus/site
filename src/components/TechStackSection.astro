---
import { Code2, Database, Zap } from "lucide-react";
---

<section id="tech-stack" class="py-20 relative">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">
                Modern Tech Stack
            </h2>
            <p class="text-xl text-slate-300 max-w-2xl mx-auto">
                Built with the latest and greatest technologies for optimal
                performance
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
            <div
                class="text-center p-8 rounded-xl bg-gradient-to-b from-orange-600/20 to-orange-800/20 border border-orange-500/30"
            >
                <div
                    class="w-16 h-16 mx-auto mb-4 bg-orange-600 rounded-lg flex items-center justify-center"
                >
                    <Code2 className="w-8 h-8 text-white" />
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">SvelteKit</h3>
                <p class="text-slate-300">
                    Frontend framework with exceptional performance
                </p>
            </div>

            <div
                class="text-center p-8 rounded-xl bg-gradient-to-b from-green-600/20 to-green-800/20 border border-green-500/30"
            >
                <div
                    class="w-16 h-16 mx-auto mb-4 bg-green-600 rounded-lg flex items-center justify-center"
                >
                    <Database className="w-8 h-8 text-white" />
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">MongoDB</h3>
                <p class="text-slate-300">Flexible, scalable NoSQL database</p>
            </div>

            <div
                class="text-center p-8 rounded-xl bg-gradient-to-b from-purple-600/20 to-purple-800/20 border border-purple-500/30"
            >
                <div
                    class="w-16 h-16 mx-auto mb-4 bg-purple-600 rounded-lg flex items-center justify-center"
                >
                    <Zap className="w-8 h-8 text-white" />
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">HonoJS</h3>
                <p class="text-slate-300">Ultra-fast web framework for APIs</p>
            </div>
        </div>
    </div>
</section>

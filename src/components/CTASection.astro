---
import { Button } from "./Button";
import { Star, ArrowRight } from "lucide-react";
---

<section class="py-20 relative">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
                Ready to Build Something Great?
            </h2>
            <p class="text-xl text-slate-300 mb-8 max-w-2xl mx-auto">
                Join the development journey and help shape the future of
                content management systems.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <Button
                    effect="shine"
                    icon={Star}
                    iconPlacement="left"
                    className="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-4 text-lg font-medium rounded-lg transition-all duration-300"
                >
                    Star on GitHub
                </Button>
                <Button
                    effect="expandIcon"
                    icon={ArrowRight}
                    iconPlacement="right"
                    className="bg-transparent hover:bg-white/10 text-white px-8 py-4 text-lg font-medium rounded-lg border border-white/20 hover:border-white/40 transition-colors"
                >
                    Get Started
                </Button>
            </div>
        </div>
    </div>
</section>

---
import { AnimatedText } from "./AnimatedText";
import { Eye, BookOpen, Sparkles } from "lucide-react";
import { Button } from "./Button";

export interface Props {
  title?: string;
  subtitle?: string;
  flipWords?: string[];
}

const {
  title = "cms title",
  subtitle = "cms subtitle",
  flipWords: flipWords = [],
} = Astro.props;
---

<div
  class="w-full overflow-visible pt-16 bg-[radial-gradient(ellipse_1200px_800px_at_50%_0%,rgba(59,130,246,0.06)_0%,rgba(59,130,246,0.03)_40%,rgba(59,130,246,0.01)_70%,transparent_100%)] dark:bg-[radial-gradient(ellipse_1200px_800px_at_50%_0%,rgba(59,130,246,0.15)_0%,rgba(59,130,246,0.08)_40%,rgba(59,130,246,0.02)_70%,transparent_100%)] transition-all duration-200"
>
  <div class="container mx-auto">
    <div
      class="flex gap-8 py-20 lg:py-40 items-center justify-center flex-col text-slate-900 dark:text-white"
    >
      <!-- Badge -->
      <div
        class="inline-flex items-center px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-600/20 border border-blue-200 dark:border-blue-500/30 text-blue-700 dark:text-blue-300 text-sm font-medium"
      >
        <Sparkles className="w-4 h-4 mr-2" />
        Now in development
      </div>
      <div class="flex gap-4 flex-col">
        <h1
          class="text-5xl md:text-7xl max-w-2xl tracking-tighter text-center font-regular"
        >
          <span>{title}</span>
          <AnimatedText words={flipWords} client:load />
        </h1>

        <p
          class="text-lg md:text-xl leading-relaxed tracking-tight text-slate-700 dark:text-slate-300 max-w-2xl text-center"
        >
          {subtitle}
        </p>
      </div>
      <div class="flex flex-row gap-3">
        <Button
          effect="expandIcon"
          icon={Eye}
          iconPlacement="right"
          className="items-center bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors font-medium cursor-pointer"
        >
          See Demo
        </Button>
        <Button
          effect="expandIcon"
          icon={BookOpen}
          iconPlacement="right"
          className="items-center bg-white dark:bg-transparent hover:bg-slate-100 dark:hover:bg-white/10 text-slate-900 dark:text-white px-6 py-3 rounded-lg border border-neutral-200 dark:border-white/20 transition-colors font-medium cursor-pointer"
        >
          View Docs
        </Button>
      </div>
    </div>
  </div>
</div>

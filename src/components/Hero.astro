---
import { AnimatedText } from "./AnimatedText";
import { ArrowRight, MoveRight, PhoneCall } from "lucide-react";
import { Button } from "./Button";

export interface Props {
  title?: string;
  "flip-words"?: string[];
}

const { title = "This is something", "flip-words": flipWords = [] } =
  Astro.props;
---

<div class="w-full">
  <div class="container mx-auto">
    <div class="flex gap-8 py-20 lg:py-40 items-center justify-center flex-col">
      <div>
        <Button
          effect="expandIcon"
          icon={ArrowRight}
          iconPlacement="right"
          className="items-center bg-slate-800/50 hover:bg-slate-700/50 text-slate-200 px-4 py-2 rounded-lg border border-slate-600/50 transition-colors cursor-pointer"
        >
          Join the waitlist
        </Button>
      </div>
      <div class="flex gap-4 flex-col">
        <h1
          class="text-5xl md:text-7xl max-w-2xl tracking-tighter text-center font-regular"
        >
          <span class="text-white">{title}</span>
          <AnimatedText words={flipWords} client:load />
        </h1>

        <p
          class="text-lg md:text-xl leading-relaxed tracking-tight text-slate-300 max-w-2xl text-center"
        >
          Managing a small business today is already tough. Avoid further
          complications by ditching outdated, tedious trade methods. Our goal is
          to streamline SMB trade, making it easier and faster than ever.
        </p>
      </div>
      <div class="flex flex-row gap-3">
        <button
          class="gap-4 flex items-center bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors font-medium"
        >
          Jump on a call <PhoneCall className="w-4 h-4" />
        </button>
        <button
          class="gap-4 flex items-center bg-transparent hover:bg-white/10 text-white px-6 py-3 rounded-lg border border-white/20 hover:border-white/40 transition-colors font-medium"
        >
          Sign up here <MoveRight className="w-4 h-4" />
        </button>
      </div>
    </div>
  </div>
</div>

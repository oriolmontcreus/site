---
export interface Props {
  title: string;
  docsUrl?: string;
  githubUrl?: string;
}

const { title, docsUrl, githubUrl } = Astro.props;
---

<section class="min-h-screen pt-[30vh]">
  <!-- Content -->
  <div class="z-10 px-8 mb-12">
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-semibold leading-tight mb-6 text-white">
        {title}
      </h1>
      
      <!-- Subtitle with fade-up animation -->
      <p class="text-lg md:text-xl lg:text-2xl leading-relaxed text-slate-400 max-w-2xl font-serif">
        The next-generation content management system built for developers who demand power, flexibility, and elegance.
      </p>
    </div>
    
    <!-- Buttons with fade-up animation -->
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center opacity-0 animate-fade-up-delay-2">
      {docsUrl && (
        <a 
          href={docsUrl} 
          class="group inline-flex items-center gap-3 px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-blue-500 to-blue-700 rounded-xl shadow-lg shadow-blue-500/40 border border-blue-500/20 transition-all duration-300 hover:-translate-y-0.5 hover:shadow-xl hover:shadow-blue-500/50 relative overflow-hidden"
        >
          <!-- Hover border effect -->
          <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-transparent via-blue-400/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" style="padding: 1px; mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); mask-composite: xor; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor;"></div>
          
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14,2 14,8 20,8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10,9 9,9 8,9"></polyline>
          </svg>
          Documentation
        </a>
      )}
      
      {githubUrl && (
        <a 
          href={githubUrl} 
          class="group inline-flex items-center gap-3 px-8 py-4 text-lg font-semibold text-slate-300 bg-slate-800/80 backdrop-blur-xl rounded-xl border border-blue-500/20 transition-all duration-300 hover:-translate-y-0.5 hover:bg-blue-500/10 hover:text-white hover:border-blue-500/40 w-full sm:w-auto justify-center sm:justify-start max-w-xs"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      )}
    </div>
</section>
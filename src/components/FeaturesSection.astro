---
import { Code2, Database, Users, Zap, Shield, Palette } from "lucide-react";

const features = [
    {
        icon: Code2,
        title: "Modern Stack",
        description:
            "Built with SvelteKit, MongoDB, and HonoJS for maximum performance",
    },
    {
        icon: Database,
        title: "Powerful Admin",
        description: "Inspired by Filament v3 with shadcn-svelte components",
    },
    {
        icon: Users,
        title: "Developer First",
        description:
            "Type-safe APIs, excellent DX, and extensive customization",
    },
    {
        icon: Zap,
        title: "Blazing Fast",
        description: "Optimized for performance with modern web technologies",
    },
    {
        icon: Shield,
        title: "Secure by Default",
        description:
            "Built-in authentication, authorization, and security best practices",
    },
    {
        icon: Palette,
        title: "Beautiful UI",
        description: "Modern, responsive design with dark mode support",
    },
];
---

<section id="features" class="py-20 relative">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">
                Built for Modern Development
            </h2>
            <p class="text-xl text-slate-300 max-w-2xl mx-auto">
                Everything you need to build powerful, scalable web applications
                with a beautiful admin interface
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                features.map((feature, index) => (
                    <div class="group p-6 rounded-xl bg-white/5 backdrop-blur-sm border border-white/10 hover:border-blue-500/50 transition-all duration-300 hover:bg-white/10">
                        <feature.icon className="w-8 h-8 text-blue-400 mb-4 group-hover:scale-110 transition-transform" />
                        <h3 class="text-xl font-semibold text-white mb-2">
                            {feature.title}
                        </h3>
                        <p class="text-slate-300 leading-relaxed">
                            {feature.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

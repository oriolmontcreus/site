---
import PerformanceCard from "./features/PerformanceCard";
import FrameworkAgnosticCard from "./features/FrameworkAgnosticCard";
import TypeSafetyCard from "./features/TypeSafetyCard";
import GlobalVariablesCard from "./features/GlobalVariablesCard";
import FluentAPICard from "./features/FluentAPICard";
import CLIToolsCard from "./features/CLIToolsCard";
import BuiltInToolbarCard from "./features/BuiltInToolbarCard";
import TranslationModeCard from "./features/TranslationModeCard";
import FullyThemableCard from "./features/FullyThemableCard";
import FullyResponsiveCard from "./features/FullyResponsiveCard";
import OpenSourceCard from "./features/OpenSourceCard";
import ExtensiveDocsCard from "./features/ExtensiveDocsCard";
import FullyExtensibleCard from "./features/FullyExtensibleCard";
import AIReadyCard from "./features/AIReadyCard";
import FastDevelopmentCard from "./features/FastDevelopmentCard";
import SmartAssetsCard from "./features/SmartAssetsCard";
---

<main class="min-h-screen bg-background">
    <section class="py-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            <!-- Section Header -->
            <div class="text-center mb-16">
                <h2
                    class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-4"
                >
                    Features that speak for themselves
                </h2>
                <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                    Discover why Excalibur CMS is the perfect choice for modern
                    web development with Astro
                </p>
            </div>

            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
            >
                <PerformanceCard client:load />
                <FrameworkAgnosticCard client:load />
                <TypeSafetyCard client:load />
                <GlobalVariablesCard client:load />
                <FluentAPICard client:load />
                <CLIToolsCard client:load />
                <BuiltInToolbarCard client:load />
                <TranslationModeCard client:load />
                <FullyThemableCard client:load />
                <FullyResponsiveCard client:load />
                <OpenSourceCard client:visible />
                <ExtensiveDocsCard client:load />
                <FullyExtensibleCard client:load />
                <AIReadyCard client:load />
                <FastDevelopmentCard client:load />
                <SmartAssetsCard client:load />
            </div>
        </div>
    </section>
</main>
